@model List<HizliOgren.Models.Course>
@{
  ViewData["Title"] = "Eğitim Yönetimi";
  var categories = ViewBag.Categories as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
  var q = ViewBag.Q as string;
  var published = ViewBag.Published as bool?;
}
<div style="margin-bottom: 24px;">
  <a asp-action="Edit" class="btn btn-primary">Yeni Eğitim Ekle</a>
  <form method="get" asp-action="Index" style="display: inline; margin-left: 16px;">
    <input type="search" name="q" class="form-control" placeholder="Eğitim ara..." value="@q" style="max-width: 280px; display: inline-block;" />
    <select name="catId" class="form-control" style="max-width: 180px; display: inline-block;" asp-items="categories">
      <option value="">Tüm Kategoriler</option>
    </select>
    <select name="published" class="form-control" style="max-width: 140px; display: inline-block;">
      <option value="">Tümü</option>
      <option value="true" selected="@(published == true)">Yayında</option>
      <option value="false" selected="@(published == false)">Taslak</option>
    </select>
    <button type="submit" class="btn btn-ghost">Filtrele</button>
  </form>
</div>
<div class="table-wrap">
  <table>
    <thead>
      <tr>
        <th>Görsel</th>
        <th>Eğitim Adı</th>
        <th>Kategori</th>
        <th>Fiyat</th>
        <th>Durum</th>
        <th>İşlemler</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var c in Model)
      {
        <tr>
          <td><img src="@(c.ImageUrl ?? "https://placehold.co/80x50/e0f2f1/0f766e")" alt="" style="width:80px;height:50px;object-fit:cover;border-radius:4px;" /></td>
          <td>@c.Title</td>
          <td>@c.Category?.Name</td>
          <td>@c.Price.ToString("N0") TL</td>
          <td><span class="badge @(c.IsPublished ? "badge-success" : "badge-warning")">@(c.IsPublished ? "Yayında" : "Taslak")</span></td>
          <td>
            <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-ghost" style="padding: 6px 12px;">Düzenle</a>
            <button type="button" class="btn btn-ghost" style="padding: 6px 12px;" data-confirm-delete data-delete-action="@Url.Action("Delete", new { id = c.Id })" data-delete-message="Bu eğitimi silmek istediğinize emin misiniz?">Sil</button>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>
@if (Model.Count == 0) { <p style="color: var(--text-muted);">Eğitim bulunamadı.</p> }
