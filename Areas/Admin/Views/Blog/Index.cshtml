@model List<HizliOgren.Models.BlogPost>
@{
  ViewData["Title"] = "Blog Yönetimi";
  var q = ViewBag.Q as string;
}
<div style="margin-bottom: 24px;">
  <a asp-action="Edit" class="btn btn-primary">Yeni Yazı Ekle</a>
  <form method="get" asp-action="Index" style="display: inline; margin-left: 16px;">
    <input type="search" name="q" class="form-control" placeholder="Yazı ara..." value="@q" style="max-width: 280px; display: inline-block;" />
    <button type="submit" class="btn btn-ghost">Ara</button>
  </form>
</div>
<div class="table-wrap">
  <table>
    <thead>
      <tr>
        <th>Başlık</th>
        <th>Yazar</th>
        <th>Durum</th>
        <th>Tarih</th>
        <th>İşlemler</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var b in Model)
      {
        <tr>
          <td>@b.Title</td>
          <td>@b.Author?.FullName</td>
          <td><span class="badge @(b.IsPublished ? "badge-success" : "badge-warning")">@(b.IsPublished ? "Yayında" : "Taslak")</span></td>
          <td>@((b.PublishedAt ?? b.CreatedAt).ToString("d MMM yyyy"))</td>
          <td>
            <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-ghost" style="padding: 6px 12px;">Düzenle</a>
            <button type="button" class="btn btn-ghost" style="padding: 6px 12px;" data-confirm-delete data-delete-action="@Url.Action("Delete", new { id = b.Id })" data-delete-message="Bu yazıyı silmek istediğinize emin misiniz?">Sil</button>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>
@if (Model.Count == 0) { <p style="color: var(--text-muted);">Yazı bulunamadı.</p> }
