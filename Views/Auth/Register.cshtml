@model HizliOgren.Models.RegisterViewModel
@{
  ViewData["Title"] = "Kayıt Ol";
  var returnUrl = ViewData["ReturnUrl"] as string ?? "/";
}
<section class="section" style="min-height: calc(100vh - 200px); display: flex; align-items: center;">
  <div class="container" style="max-width: 520px;">
    <div class="card" style="padding: 32px;">
      <h1 style="font-size: 1.75rem; margin-bottom: 8px;">Kayıt Ol</h1>
      <p style="color: var(--text-muted); margin-bottom: 24px;">Ücretsiz hesap oluşturarak eğitim satın alabilir ve satın aldığınız eğitimlere erişebilirsiniz.</p>
      <a asp-action="Google" asp-route-returnUrl="@returnUrl" class="btn btn-google" style="margin-bottom: 0;">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" style="width:20px;height:20px;">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Google ile Kayıt Ol
      </a>
      <p class="auth-divider">veya</p>
      <form asp-action="Register" method="post" asp-route-returnUrl="@returnUrl">
        <div asp-validation-summary="All" class="text-danger" style="margin-bottom: 16px;"></div>
        @Html.AntiForgeryToken()
        <div class="form-group">
          <label asp-for="FullName">Ad Soyad</label>
          <input asp-for="FullName" type="text" class="form-control" placeholder="Adınız Soyadınız" />
          <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Email">E-posta</label>
          <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" />
          <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Password">Şifre</label>
          <input asp-for="Password" type="password" class="form-control" placeholder="En az 6 karakter" />
          <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="ConfirmPassword">Şifre Tekrar</label>
          <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifrenizi tekrar girin" />
          <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="City">Şehir (Opsiyonel)</label>
          <select asp-for="City" class="form-control" asp-items="ViewBag.CityList"></select>
        </div>
        <div class="form-group">
          <label asp-for="CaptchaCode">Güvenlik kodu</label>
          <div style="display: flex; align-items: center; gap: 8px; flex-wrap: wrap; max-width: 100%;">
            <img id="captcha-img-register" src="@Url.Action("Image", "Captcha", new { key = "Register", t = DateTime.UtcNow.Ticks })" alt="Güvenlik kodu" style="height: 28px; width: auto; border: 1px solid var(--border); border-radius: var(--radius-sm); background: #f5f5fa; display: block;" />
            <a href="#" id="captcha-refresh-register" title="Yenile" style="display: inline-flex; align-items: center; justify-content: center; width: 28px; height: 28px; border: 1px solid var(--border); border-radius: var(--radius-sm); color: var(--text-muted);" aria-label="Kodu yenile"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 2v6h-6"/><path d="M3 12a9 9 0 0 1 15-6.7L21 8"/><path d="M3 22v-6h6"/><path d="M21 12a9 9 0 0 1-15 6.7L3 16"/></svg></a>
            <input asp-for="CaptchaCode" class="form-control" placeholder="Giriniz" maxlength="10" autocomplete="off" style="max-width: 90px; min-width: 0;" />
          </div>
          <span asp-validation-for="CaptchaCode" class="text-danger"></span>
        </div>
        <input type="hidden" name="returnUrl" value="@returnUrl" />
        <button type="submit" class="btn btn-primary" style="width: 100%;">Kayıt Ol</button>
      </form>
      <p class="form-footer-text">
        Zaten hesabınız var mı? <a asp-action="Login" asp-route-returnUrl="@returnUrl">Giriş yapın</a>
      </p>
    </div>
  </div>
</section>
@section Scripts {
  <partial name="_ValidationScriptsPartial" />
  <script>
    (function() {
      var img = document.getElementById('captcha-img-register');
      var refresh = document.getElementById('captcha-refresh-register');
      if (refresh) refresh.addEventListener('click', function(e) { e.preventDefault(); if (img) img.src = '@Url.Action("Image", "Captcha", new { key = "Register" })&_' + Date.now(); });
    })();
  </script>
}
