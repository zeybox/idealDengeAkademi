@model int
@if (Model > 0)
{
  <span id="cart-count" style="display:inline-flex;background:var(--primary);color:#fff;padding:2px 8px;border-radius:50px;font-size:0.8rem;">@Model</span>
}
else
{
  <span id="cart-count" style="display:none;background:var(--primary);color:#fff;padding:2px 8px;border-radius:50px;font-size:0.8rem;">0</span>
}
